# Ignore bundler config.
/.bundle

# Ignore all environment files.
/.env*

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development).
/storage/*
!/storage/.keep

# Ignore SQLite databases.
/db/*.sqlite3
/db/*.sqlite3-*

# Ignore all IDE files.
/.idea

# Ignore cookie/session dumps.
cookie.txt

# Ignore node_modules if present.
/node_modules

# Ignore master key for decrypting credentials and more.
/config/master.key
/config/credentials/*.key

# Auto-generated by engine gems (tailwindcss-rails)
/app/assets/tailwind/iron_admin.css
/app/assets/builds/tailwind/

# Kamal deployment (contains server IPs and secrets)
/config/deploy.yml
/.kamal/secrets

.mcp.json